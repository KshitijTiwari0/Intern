  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    /* Custom CSS styles */

    /* Adjust the background color and text color of the header */
    .navigation {
      background-color: #212529;
      color: #fff;
      padding: 10px;
    }

    /* Adjust the logo image size */
    .navbar-brand img {
      width: 30px;
      height: 24px;
    }

    /* Adjust the background color of the navigation links */
    .navbar {
      background-color: #ede4ff;
    }

    /* Adjust the button style in the navigation */
    .navbar .btn {
      background-color: #212529;
      color: #fff;
    }

    /* Enhance the navbar links */
    .navbar a.nav-link {
      color: #000;
      font-weight: bold;
      text-decoration: none;
    }

    /* Enhance the active navbar link */
    .navbar a.nav-link.active {
      color: #9d26ff;
    }

    /* Adjust the color scheme of the intro section */
    #intro {
      background-color: #f8f9fa;
      padding: 40px 0;
    }

    /* Adjust the image size in the intro section */
    #intro .img-thumbnail {
      max-width: 100%;
      height: auto;
    }

    /* Adjust the color scheme and styles of the choice section */
    #choice {
      background-color: #383f51;
      color: #fff;
      padding: 40px 0;
    }

    .choice .card {
      background-color: #fff;
      border: none;
      transition: transform 0.3s;
    }

    .choice .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .choice .card-title {
      font-size: 24px;
      text-align: center;
      color: #212529;
      margin-bottom: 0;
    }

    .choice .card-text {
      font-size: 18px;
      text-align: center;
      color: #212529;
    }

    .choice .btn {
      display: block;
      width: 100%;
      text-align: center;
      padding: 10px 0;
      background-color: #9d26ff;
      color: #fff;
      font-size: 18px;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .choice .btn:hover {
      background-color: #8700b9;
    }

    /* Carousel styles */
    #carousel .carousel-item {
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
    }

    #carousel .carousel-item img {
      width: 100%;
      height: auto;
      border-radius: 10px;
    }

    /* Client feedback section styles */
    #feedback {
      background-color: #f8f9fa;
      padding: 40px 0;
    }

    .feedback-title {
      text-align: center;
      color: #212529;
      font-size: 24px;
      margin-bottom: 40px;
    }

    .feedback-carousel {
      max-width: 600px;
      margin: 0 auto;
    }

    .feedback-carousel .carousel-inner {
      border-radius: 10px;
    }

    .feedback-carousel .carousel-item {
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      text-align: center;
      color: #212529;
    }

    .feedback-carousel .carousel-item p {
      margin-bottom: 0;
    }

    .feedback-carousel .carousel-control-prev,
    .feedback-carousel .carousel-control-next {
      background-color: #9d26ff;
    }

    /* Footer styles */
    footer {
      background-color: #212529;
      color: #fff;
      padding: 20px;
    }

    .footer-links {
      display: flex;
      justify-content: center;
      margin-bottom: 10px;
    }

    .footer-links a {
      color: #fff;
      margin: 0 10px;
      text-decoration: none;
      transition: color 0.3s;
    }

    .footer-links a:hover {
      color: #ffc107;
    }

    .footer-text {
      text-align: center;
      font-size: 14px;
    }
  </style>
</head>

