    /* Custom CSS styles */

    /* Adjust the background color and text color of the header */
    header {
      background-color: #212529;
      color: #fff;
      padding: 10px;
    }

    /* Adjust the font size and alignment of the navbar brand */
    .navbar-brand {
      font-size: 24px;
    }

    /* Adjust the margin between the product cards */
    .card {
      margin-bottom: 20px;
      transition: transform 0.3s;
      background-color: #fff;
      position: relative;
      overflow: hidden;
    }

    /* Apply a hover effect to the product cards */
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Adjust the width and height of the product images */
    .card-img-top {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    /* Adjust the font size and alignment of the product titles */
    .card-title {
      font-size: 20px;
      text-align: center;
      color: #212529;
    }

    /* Adjust the font size and alignment of the product descriptions */
    .card-text {
      font-size: 16px;
      text-align: center;
    }

    /* Add smoky background effect */
    body {
      background: linear-gradient(90deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 30%, rgba(0, 0, 0, 0.2) 100%);
      background-size: 100% 100%;
      background-attachment: fixed;
    }

    /* Add smoky effect for cards */
    .smoky-effect {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/images/smoke.jpeg'); /* Replace with your own smoky image */
      background-repeat: repeat;
      opacity: 0.3;
      pointer-events: none;
      z-index: -1;
      animation: smoky-animation 20s linear infinite;
    }

    @keyframes smoky-animation {
      0% {
        background-position: 0 0;
      }
      100% {
        background-position: 2000px 0; /* Adjust the value to control the speed of the smoky effect */
      }
    }

    /* Adjust the color scheme of the subscription plan section */
    .subscription-section {
      background-color: #383f51;
      position: relative;
      overflow: hidden;
    }

    .subscription-smoky-effect {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/images/smoke.png'); /* Replace with your own smoky image */
      background-repeat: repeat;
      opacity: 0.3;
      pointer-events: none;
      z-index: -1;
      animation: smoky-animation 20s linear infinite;
    }

    .subscription-card {
      border: none;
      background-color: #fff;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s;
      border-radius: 10px;
      overflow: hidden;
      position: relative;
    }

    .subscription-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .subscription-card-title {
      font-size: 24px;
      text-align: center;
      color: #212529;
      margin-bottom: 0;
    }

    .subscription-card-subtitle {
      font-size: 18px;
      text-align: center;
      color: #212529;
    }

    .subscription-card-price {
      font-size: 28px;
      text-align: center;
      color: #212529;
      margin-top: 10px;
      margin-bottom: 15px;
    }

    .subscription-card-text {
      font-size: 16px;
      text-align: center;
      color: #212529;
      margin-bottom: 20px;
    }

    .subscription-card-button {
      display: block;
      width: 100%;
      text-align: center;
      padding: 10px 0;
      background-color: #6c757d;
      color: #fff;
      font-size: 18px;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .subscription-card-button:hover {
